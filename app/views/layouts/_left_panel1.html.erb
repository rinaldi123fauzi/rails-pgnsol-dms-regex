      <% elsif current_user.is? 7 %>
      <%= render 'layouts/menu/inputerwr'%>
      <% elsif current_user.is? 8 %>
      <%= render 'layouts/menu/checkerqm' %>
      <% elsif current_user.is? 9 %>
      <%= render 'layouts/menu/checkerwr' %>
      <% elsif current_user.is? 10 %>
      <%= render 'layouts/menu/staff'%>
      <% elsif current_user.is? 12 %>
      <%= render 'layouts/menu/kadiv' %>
      <% end %>
    </ul>
  </nav>


