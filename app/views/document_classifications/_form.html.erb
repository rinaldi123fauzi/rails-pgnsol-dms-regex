  <header>
    <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
    <h2>document_classification </h2>

  </header>

  <!-- widget div-->
  <div>

    <!-- widget edit box -->
    <div class="jarviswidget-editbox">
      <!-- This area used as dropdown edit box -->

    </div>
    <!-- end widget edit box -->

    <!-- widget content -->
    <div class="widget-body no-padding">

        <%= form_for(@document_classification, html: { id: "review-form", class: "smart-form", role: "form" }) do |f| %>
        <% if @document_classification.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@document_classification.errors.count, "error") %> prohibited this member from being saved:</h4>

            <ul>
              <% @document_classification.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <header>
          document_classification
        </header>

        <fieldset>
<!--                    <section>-->
<!--            <label class="input"> <i class="icon-append fa fa-user"></i>-->
                <%#= f.number_field :sub_document_type_id, class: "form-control", id: "sub_document_type_id", placeholder: "sub_document_type_id" %>
<!--            </label>-->
<!--          </section>-->
          <section>
            <label class="control-label">Sub Document Type</label>
            <label class="input">
              <%# <%= f.number_field :field_id, class: "form-control", id: "field_id", placeholder: "field_id" %>
              <%= f.collection_select :sub_document_type_id, SubDocumentType.order(:sub_type_name), :sub_document_type_id, :sub_type_name, {prompt: "Select a Field"}, {:class => 'select2'} %>
            </label>
          </section>
                    <section>
            <label class="input"> <i class="icon-append fa fa-user"></i>
                <%= f.text_field :classification_name, class: "form-control", id: "classification_name", placeholder: "classification_name" %>
            </label>
          </section>
                  </fieldset>
        <footer>
          <%= f.submit class: "btn btn-primary" %>
        </footer>
        <% end %>

    </div>
    <!-- end widget content -->

  </div>
  <!-- end widget div -->

</div>

<script type="text/javascript">
  $(document).ready(function() {

    pageSetUp();
    var errorClass = 'invalid';
    var errorElement = 'em';
    var $reviewForm = $("#review-form").validate({
      errorClass		: errorClass,
      errorElement	: errorElement,
      highlight: function(element) {
        $(element).parent().removeClass('state-success').addClass("state-error");
        $(element).removeClass('valid');
      },
      unhighlight: function(element) {
        $(element).parent().removeClass("state-error").addClass('state-success');
        $(element).addClass('valid');
      },
      // Rules for form validation
      rules : {
                'document_classification[sub_document_type_id]' : {
          required : true
        },
                'document_classification[classification_name]' : {
          required : true
        },
              },

      // Messages for form validation
      messages : {
                'document_classification[sub_document_type_id]' : {
          required : 'Please enter your textbox sub_document_type_id '
        },
                'document_classification[classification_name]' : {
          required : 'Please enter your textbox classification_name '
        },
              },

      // Do not change code below
      errorPlacement : function(error, element) {
        error.insertAfter(element.parent());
      }
    });
  });
</script>

