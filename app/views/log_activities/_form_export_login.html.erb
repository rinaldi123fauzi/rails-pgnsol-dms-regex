<div class="modal-body">
  <div class="smart-form">
    <div class="row">
      <header>
        Export
      </header>

      <form action="<%= report_login_log_activities_path(format: :pdf) %>" method="get">
        <fieldset>
          <section>
            <label class="control-label">Start</label>
            <label class="input"> <i class="icon-append fa fa-calendar"></i>
              <input type="text" id="dateformat" name="start_date" class="datepicker" data-dateformat='yy-mm-dd' required>
            </label>
          </section>
          <section>
            <label class="control-label">End</label>
            <label class="input"> <i class="icon-append fa fa-calendar"></i>
              <input type="text" id="dateformat1" name="end_date" class="datepicker" data-dateformat='yy-mm-dd' required>
            </label>
          </section>
        </fieldset>
        <footer>
          <input type="submit" value="Generate Report" class="btn btn-success">
        </footer>
      </form>
    </div>
  </div>
</div>
<% content_for :scripts do %>

  <script type="text/javascript">
      $(document).ready(function () {

          $("#dateformat").datepicker({
              dateFormat: 'yy-mm-dd',
              defaultDate: "0d",
              changeMonth: true,
              changeYear: true,
              prevText: "",
              nextText: "",
          });

          $("#dateformat1").datepicker({
              dateFormat: 'yy-mm-dd',
              defaultDate: "0d",
              changeMonth: true,
              changeYear: true,
              prevText: "",
              nextText: "",
          });
      });
  </script>
<% end %>
