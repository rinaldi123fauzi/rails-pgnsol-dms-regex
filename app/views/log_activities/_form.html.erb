<div class="jarviswidget" id="wid-id-7" data-widget-editbutton="false" data-widget-custombutton="false">
  <!-- widget options:
    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

    data-widget-colorbutton="false"
    data-widget-editbutton="false"
    data-widget-togglebutton="false"
    data-widget-deletebutton="false"
    data-widget-fullscreenbutton="false"
    data-widget-custombutton="false"
    data-widget-collapsed="true"
    data-widget-sortable="false"

  -->
  <header>
    <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
    <h2>log_activity </h2>

  </header>

  <!-- widget div-->
  <div>

    <!-- widget edit box -->
    <div class="jarviswidget-editbox">
      <!-- This area used as dropdown edit box -->

    </div>
    <!-- end widget edit box -->

    <!-- widget content -->
    <div class="widget-body no-padding">

        <%= form_for(@log_activity, html: { id: "review-form", class: "smart-form", role: "form" }) do |f| %>
        <header>
          log_activity
        </header>

        <fieldset>
                    <section>
            <label class="input"> <i class="icon-append fa fa-user"></i>
                <%= f.number_field :member_id, class: "form-control", id: "member_id", placeholder: "member_id" %>
            </label>
          </section>
                    <section>
            <label class="input"> <i class="icon-append fa fa-user"></i>
                <%= f.text_field :document_code, class: "form-control", id: "document_code", placeholder: "document_code" %>
            </label>
          </section>
                    <section>
            <label class="input"> <i class="icon-append fa fa-user"></i>
                <%= f.datetime_select :activity_date, class: "form-control", id: "activity_date", placeholder: "activity_date" %>
            </label>
          </section>
                    <section>
            <label class="input"> <i class="icon-append fa fa-user"></i>
                <%= f.text_area :activity, class: "form-control", id: "activity", placeholder: "activity" %>
            </label>
          </section>
                    <section>
            <label class="input"> <i class="icon-append fa fa-user"></i>
                <%= f.text_field :controller, class: "form-control", id: "controller", placeholder: "controller" %>
            </label>
          </section>
                    <section>
            <label class="input"> <i class="icon-append fa fa-user"></i>
                <%= f.text_field :action, class: "form-control", id: "action", placeholder: "action" %>
            </label>
          </section>
                    <section>
            <label class="input"> <i class="icon-append fa fa-user"></i>
                <%= f.text_field :browser, class: "form-control", id: "browser", placeholder: "browser" %>
            </label>
          </section>
                    <section>
            <label class="input"> <i class="icon-append fa fa-user"></i>
                <%= f.text_field :ip_address, class: "form-control", id: "ip_address", placeholder: "ip_address" %>
            </label>
          </section>
                  </fieldset>
        <footer>
          <%= f.submit class: "btn btn-primary" %>
        </footer>
        <% end %>

    </div>
    <!-- end widget content -->

  </div>
  <!-- end widget div -->

</div>

<script type="text/javascript">
  $(document).ready(function() {

    pageSetUp();
    var errorClass = 'invalid';
    var errorElement = 'em';
    var $reviewForm = $("#review-form").validate({
      errorClass		: errorClass,
      errorElement	: errorElement,
      highlight: function(element) {
        $(element).parent().removeClass('state-success').addClass("state-error");
        $(element).removeClass('valid');
      },
      unhighlight: function(element) {
        $(element).parent().removeClass("state-error").addClass('state-success');
        $(element).addClass('valid');
      },
      // Rules for form validation
      rules : {
                'log_activity[member_id]' : {
          required : true
        },
                'log_activity[document_code]' : {
          required : true
        },
                'log_activity[activity_date]' : {
          required : true
        },
                'log_activity[activity]' : {
          required : true
        },
                'log_activity[controller]' : {
          required : true
        },
                'log_activity[action]' : {
          required : true
        },
                'log_activity[browser]' : {
          required : true
        },
                'log_activity[ip_address]' : {
          required : true
        },
              },

      // Messages for form validation
      messages : {
                'log_activity[member_id]' : {
          required : 'Please enter your textbox member_id '
        },
                'log_activity[document_code]' : {
          required : 'Please enter your textbox document_code '
        },
                'log_activity[activity_date]' : {
          required : 'Please enter your textbox activity_date '
        },
                'log_activity[activity]' : {
          required : 'Please enter your textbox activity '
        },
                'log_activity[controller]' : {
          required : 'Please enter your textbox controller '
        },
                'log_activity[action]' : {
          required : 'Please enter your textbox action '
        },
                'log_activity[browser]' : {
          required : 'Please enter your textbox browser '
        },
                'log_activity[ip_address]' : {
          required : 'Please enter your textbox ip_address '
        },
              },

      // Do not change code below
      errorPlacement : function(error, element) {
        error.insertAfter(element.parent());
      }
    });
  });
</script>

